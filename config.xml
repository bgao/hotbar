<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="mobi.hotbar" version="0.9.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>HotBar</name>
  <description>
        HotBar App.
    </description>
  <author email="bert.gao@gmail.com" href="http://hotbar.mobi/">
      HotBar Team
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <platform name="android">
    <icon src="res/android/drawable-hdpi/ic_launcher.png" width="72" height="72" density="hdpi" />
    <icon src="res/android/drawable-ldpi/ic_launcher.png" width="36" height="36" density="ldpi" />
    <icon src="res/android/drawable-mdpi/ic_launcher.png" width="48" height="48" density="mdpi" />
    <icon src="res/android/drawable-xhdpi/ic_launcher.png" width="96" height="96" density="xhdpi" />
    <icon src="res/android/drawable-xxhdpi/ic_launcher.png" width="144" height="144" density="xxhdpi" />
  </platform>
  <platform name="ios">
    <!-- ios -->
    <icon src="res/ios7/Icon-72.png" width="72" height="72" />
    <icon src="res/ios7/Icon-72@2x.png" width="144" height="144" />
    <icon src="res/ios7/Icon-Small-50.png" width="50" height="50" />
    <icon src="res/ios7/Icon-Small-50@2x.png" width="100" height="100" />
    <icon src="res/ios7/Icon-Small.png" width="50" height="50" />
    <icon src="res/ios7/Icon-Small@2x.png" width="100" height="100" />
    <icon src="res/ios7/Icon.png" width="29" height="29" />
    <icon src="res/ios7/Icon@2x.png" width="58" height="58" />
    <!-- ios 7+ -->
    <icon src="res/ios7/Icon-40.png" width="40" height="40" />
    <icon src="res/ios7/Icon-40@2x.png" width="80" height="80" />
    <icon src="res/ios7/Icon-60.png" width="60" height="60" />
    <icon src="res/ios7/Icon-60@2x.png" width="120" height="120" />
    <icon src="res/ios7/Icon-72.png" width="72" height="72" />
    <icon src="res/ios7/Icon-72@2x.png" width="144" height="144" />
    <icon src="res/ios7/Icon-76.png" width="76" height="76" />
    <icon src="res/ios7/Icon-76@2x.png" width="152" height="152" />
    <icon src="res/ios7/Icon-Small-50.png" width="50" height="50" />
    <icon src="res/ios7/Icon-Small-50@2x.png" width="100" height="100" />
    <icon src="res/ios7/Icon-Small.png" width="50" height="50" />
    <icon src="res/ios7/Icon-Small@2x.png" width="100" height="100" />
    <icon src="res/ios7/Icon.png" width="29" height="29" />
    <icon src="res/ios7/Icon@2x.png" width="58" height="58" />
  </platform>

</widget>